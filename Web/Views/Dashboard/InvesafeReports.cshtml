<div class="container-fluid page-invesafe-reports" ng-controller="invesafereportsController" ng-init="loadInvesafeReports()">

    <section class="section section-title">
        <h6>@Resource.Views.Dashboard.InvesafeReports.title</h6>
        <h2>@Resource.Views.Dashboard.InvesafeReports.subTitle</h2>
    </section>

    <div class="col-md-12">
        <div ng-hide="loadList">@Resource.Common.loading</div>

        <!-- Grid row -->
        <div class="row" ng-show="loadList">

            <!-- Grid column -->
            <div class="col-lg-4 col-md-12" ng-repeat="report in reports">

                <!--Card-->
                <div class="card">

                    <!--Card image-->
                    <div class="view">
                        <img ng-src="{{report.path+report.image}}" class="card-img-top" alt="photo">
                        <a href="#">
                            <div class="mask rgba-white-slight"></div>
                        </a>
                    </div>

                    <!--Card content-->
                    <div class="card-body text-center">
                        <!--Title-->
                        <h5 class="card-title">{{report.title_lang}}</h5>
                        <!--Text-->
                        <a href="{{report.path+report.file_lang}}" class="btn btn-primary btn-md waves-effect" target="_blank">@Resource.Views.Dashboard.InvesafeReports.lnkViewReport</a>
                    </div>

                </div>
                <!--/.Card-->

            </div>
            <!-- Grid column -->

        </div>
        <!-- Grid row -->

    </div>
</div>


