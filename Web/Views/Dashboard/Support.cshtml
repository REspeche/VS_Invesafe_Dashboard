<div class="container-fluid page-support" ng-controller="supportController" ng-init="loadSupport()">

    <section class="section section-title">
        <h2>@Resource.Views.Dashboard.Support.title</h2>
    </section>

    <div class="col-md-12">
        <form name="frmSupport" ng-submit="submitSupport()" novalidate autocomplete="off">
            <span class="hidden-xl-down formIncomplete">@Resource.Messages.Warning.formIncomplete</span>

            <div class="card card-cascade mb-2">
                <!--Naked Form-->
                <div class="card-block">

                    <!--Header-->
                    <div class="text-left">
                        <h4 class="font-weight-bold">@Resource.Views.Dashboard.Support.titQuery</h4>
                        <hr class="mt-1 mb-2">
                    </div>

                    <!--Body-->
                    <div class="row">
                        <div class="col-md-12">
                            <div>@Resource.Views.Dashboard.Support.text</div>
                            <textarea class="form-control rounded-0" rows="10" ng-model="support.query"></textarea>
                        </div>
                    </div>

                    
                    <div class="text-center">
                        <button type="submit" class="btn btn-info waves-effect waves-light">@Resource.Views.Dashboard.Support.btnQuery <i class="fa fa-question ml-1"></i></button>
                    </div>

                </div>
            </div>

        </form>
    </div>
</div>



