<div class="container" ng-controller="loginController" ng-init="loadLogin()">
    <div class="row">
        <section class="signup">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-4 mt-1 hidden-sm-down">
                        <h1>@Resource.Views.Account.SignUp.titWhySignUp</h1>

                        <ul class="advantages-list">
                            <li><span class="green-text"><i class="fa fa-check"></i></span> @Resource.Views.Account.SignUp.txtAdvantages1</li>
                            <li><span class="green-text"><i class="fa fa-check"></i></span> @Resource.Views.Account.SignUp.txtAdvantages2</li>
                            <li><span class="green-text"><i class="fa fa-check"></i></span> @Resource.Views.Account.SignUp.txtAdvantages3</li>
                            <li><span class="green-text"><i class="fa fa-check"></i></span> @Resource.Views.Account.SignUp.txtAdvantages4</li>
                            <li><span class="green-text"><i class="fa fa-check"></i></span> @Resource.Views.Account.SignUp.txtAdvantages5</li>
                            <li>@Resource.Views.Account.SignUp.txtMuchMore</li>
                        </ul>

                        @Resource.Views.Account.SignUp.lblSignUpWith <button type="button" class="btn btn-fb waves-effect waves-light" onclick="loginFacebook(1)"><i class="fab fa-facebook-f left"></i> Facebook</button>
                    </div>

                    <div class="col-md-5 offset-md-3">

                        <form name="frmRegisterPerson" ng-submit="submitRegister()" novalidate autocomplete="off">
                            <span class="hidden-xl-down formIncomplete">@Resource.Messages.Warning.formIncomplete</span>
                            <span class="hidden-xl-down PassDiferent">@Resource.Messages.Info.errorPasswordDiferent</span>
                            <!--Form with header-->
                            <div class="card">
                                <div class="card-block">

                                    <!--Header-->
                                    <div class="form-header">
                                        <h3><i class="fa fa-user-plus"></i> @Resource.Views.Account.SignUp.title</h3>
                                    </div>

                                    <!--Body-->
                                    <div class="md-form form-sm">
                                        <i class="fa fa-envelope prefix"></i>
                                        <input type="text" class="form-control validate" id="txtEmailR" name="txtEmailR"
                                               ng-model="dataR_person.email" maxlength="100" required
                                               readonly onfocus="this.removeAttribute('readonly');">
                                        <label for="txtEmailR">@Resource.Views.Account.SignUp.lblInputEmail</label>
                                    </div>
                                    <div class="row">
                                        <div class="col">
                                            <div class="md-form form-sm">
                                                <i class="fa fa-user prefix"></i>
                                                <input type="text" class="form-control validate" id="txtFirstName" name="txtFirstName"
                                                       ng-model="dataR_person.firstname" maxlength="50" required>
                                                <label for="txtFirstName">@Resource.Views.Account.SignUp.lblInputFirstName</label>
                                            </div>
                                        </div>
                                        <div class="col">
                                            <div class="md-form form-sm">
                                                <input type="text" class="form-control" id="txtLastName" name="txtLastName"
                                                       ng-model="dataR_person.lastname" maxlength="50">
                                                <label for="txtLastName">@Resource.Views.Account.SignUp.lblInputLastName</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="md-form form-sm">
                                        <i class="fa fa-unlock prefix"></i>
                                        <input type="password" name="fake_password" style="display:none" aria-hidden="true">
                                        <input type="password" class="form-control validate" id="txtPassword" name="txtPassword"
                                               ng-model="dataR_person.password" minlength="5" maxlength="20" required>
                                        <label for="txtPassword" data-error="@String.Format(Resource.Messages.Info.errorNlength,5,20)">@Resource.Views.Account.SignUp.lblInputPassword</label>
                                    </div>
                                    <div class="md-form form-sm">
                                        <i class="fa fa-lock prefix"></i>
                                        <input type="password" name="fake_password" style="display:none" aria-hidden="true">
                                        <input type="password" class="form-control validate" id="txtPasswordR" name="txtPasswordR"
                                               ng-model="dataR_person.passwordRep" minlength="5" maxlength="20" required>
                                        <label for="txtPasswordR" data-error="@String.Format(Resource.Messages.Info.errorNlength,5,20)">@Resource.Views.Account.SignUp.lblInputRepeatPassword</label>
                                    </div>

                                    <div class="text-center">
                                        <button type="submit" class="btn btn-info">@Resource.Views.Account.SignUp.btnSignUp <i class="fa fa-sign-in-alt ml-1"></i></button>
                                    </div>

                                </div>

                                <!--Footer-->
                                <div class="modal-footer">
                                    <div class="options text-right">
                                        <p class="pt-1">@Html.Raw(String.Format(Resource.Views.Account.SignUp.lnkLogin, "<a class=\"blue-text\" ng-click=\"goToLogin()\">"))</p>
                                    </div>
                                </div>

                            </div>
                            <!--/Form with header-->
                        </form>

                    </div>
                </div>

            </div>
        </section>
    </div>
</div>